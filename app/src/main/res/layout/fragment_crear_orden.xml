<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
            android:layout_marginTop="16dip"
            android:id="@+id/llHeaderOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        <TextView android:textStyle="bold" android:layout_marginLeft="36dip" android:textColor="#0091EA" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TOTAL:     S/. "/>
        <TextView android:id="@+id/totalOrden" android:layout_marginLeft="8dip" android:textColor="#0091EA" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--"/>

    </LinearLayout>

    <RelativeLayout
            android:layout_marginTop="16dip"
            android:layout_below="@id/llHeaderOrden"

            android:layout_width="match_parent" android:layout_height="match_parent">

        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
                android:visibility="visible"
                android:id="@+id/pbLoading"
                android:layout_width="48dp"
                android:layout_marginLeft="16dip"
                android:layout_centerInParent="true"

                android:layout_height="48dp"
                android:background="#1E88E5" />

        <com.quentindommerc.superlistview.SuperListview
                xmlns:superlistview="http://schemas.android.com/apk/res-auto"
                android:visibility="visible"
                android:id="@+id/lvProductos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                superlistview:superlv__listClipToPadding="false"
                superlistview:superlv__listDivider="@color/primaryColorDark"
                superlistview:superlv__listDividerHeight="2dp"
                superlistview:superlv__listPadding="0dp"
                superlistview:superlv__scrollbarStyle="outsideOverlay" >
        </com.quentindommerc.superlistview.SuperListview>


    </RelativeLayout>




</RelativeLayout>